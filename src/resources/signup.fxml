<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="chess.controller.AuthController">
    <VBox alignment="CENTER" spacing="10" layoutX="200" layoutY="80">
        <Label text="Sign Up" styleClass="title"/>
        <TextField fx:id="displayNameField" promptText="Your Name"/>
        <TextField fx:id="usernameField" promptText="Username"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <Button text="Register" onAction="#onSignup"/>
        <Hyperlink text="Already have an account?" onAction="#showLogin"/>
    </VBox>
</AnchorPane>
