<?import javafx.scene.layout.VBox?>
        <?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.scene.control.Button?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.layout.AnchorPane?>
        <?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="chess.controller.MainMenuController"
            prefWidth="400" prefHeight="300">
    <VBox spacing="15" layoutX="100" layoutY="60" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50" alignment="CENTER">
        <Label fx:id="welcomeLabel" text="Welcome!" styleClass="title" />
        <Button text="Play vs Player" onAction="#onPlayPvP" />
        <Button text="Play vs Computer" onAction="#onPlayAI" />
        <Button text="Settings" onAction="#onSettings" />
        <Button text="Logout" onAction="#onLogout" />
    </VBox>
</AnchorPane>