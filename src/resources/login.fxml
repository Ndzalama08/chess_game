<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500" prefWidth="800" style="-fx-background-color: #f6e8ec;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <HBox prefHeight="500" prefWidth="800" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Left side logo -->
        <VBox alignment="CENTER" prefWidth="400" spacing="20.0" />

        <!-- Right side login form -->
        <VBox alignment="CENTER" prefWidth="400" spacing="15" style="-fx-background-color: white; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 10, 0, 2, 2);">
            <VBox.margin>
                <Insets bottom="40" left="30" right="30" top="40" />
            </VBox.margin>

            <Label prefHeight="72.0" prefWidth="116.0" style="-fx-text-fill: #e74c3c; -fx-font-size: 24px; -fx-font-weight: bold;" text="   Login" />

            <Label text="Email" />
            <TextField fx:id="emailField" prefHeight="26.0" prefWidth="150.0" promptText="Enter your email" />

            <Label text="Password" />
            <PasswordField fx:id="passwordField" promptText="Enter your password" />

            <HBox alignment="CENTER_LEFT" spacing="10">
                <CheckBox fx:id="rememberCheck" text="Remember" />
                <Pane HBox.hgrow="ALWAYS" />
                <Hyperlink text="Forgot password?" />
            </HBox>

            <Button style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 8 30 8 30; -fx-background-radius: 20;" text="SUBMIT" />

            <Hyperlink text="Create account" />
        </VBox>
    </HBox>
</AnchorPane>
