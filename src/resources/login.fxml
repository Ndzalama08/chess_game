<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="chess.controller.LoginController"
            prefWidth="400" prefHeight="250">
    <VBox alignment="CENTER" spacing="10" layoutX="100" layoutY="50">
        <Label text="Login" styleClass="title"/>
        <Label fx:id="errorLabel" textFill="red"/>
        <TextField fx:id="usernameField" promptText="Username"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <Button text="Sign In" onAction="#onLogin"/>
        <Hyperlink text="Create account" onAction="#onShowSignup"/>
    </VBox>
</AnchorPane>
